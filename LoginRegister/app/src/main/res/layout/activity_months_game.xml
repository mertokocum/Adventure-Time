<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonthsGame"
    android:background="@drawable/background3">

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="150dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/feather"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/backButtonMonths"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"

        android:backgroundTint="#f0cfdf"
        android:src="@drawable/baseline_arrow_circle_left_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/questionTextView"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/januaryButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_blue"
            android:fontFamily="@font/feather"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/februaryButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_yellow"
            android:fontFamily="@font/feather"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/marchButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_red"
            android:fontFamily="@font/feather"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/aprilButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_pink"
            android:fontFamily="@font/feather"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mayButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_green"
            android:fontFamily="@font/feather"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/juneButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_purple"
            android:fontFamily="@font/feather"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/julyButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_orange"
            android:fontFamily="@font/feather"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/augustButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_blue"
            android:fontFamily="@font/feather"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/septemberButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_yellow"
            android:fontFamily="@font/feather"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/octoberButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_red"
            android:fontFamily="@font/feather"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/novemberButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_pink"
            android:fontFamily="@font/feather"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/decemberButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_green"
            android:fontFamily="@font/feather"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>








    </LinearLayout>


</RelativeLayout>
